<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.EditNoteFragment"
    android:background="@color/grey">
    


    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Notes"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                android:textColor="@color/blue"
                android:textStyle="bold"

                />
        <ImageButton
            android:id="@+id/btnPieChart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pie_chart"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/white"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        
        <EditText
            android:id="@+id/edtOldTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Title"
            android:textSize="18sp"
            android:background="@drawable/custom_item"
            android:layout_margin="10dp"
            />
        <EditText
            android:id="@+id/edtOldNotes"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="Notes"
            android:textSize="18sp"
            android:background="@drawable/custom_item"
            android:layout_margin="10dp"
            android:gravity="start"
            android:padding="5dp"

            />
        <EditText
            android:id="@+id/edtOldHour"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="number"
            android:hint="8"
            android:textSize="18sp"
            android:background="@drawable/custom_item"
            android:layout_margin="10dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEditNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Sửa Công việc"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:background="@drawable/custom_item"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            />


    </LinearLayout>


</FrameLayout>